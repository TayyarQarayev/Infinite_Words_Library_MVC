@model Product
<form method="post">
    <div class="border p-2 mt-4" style="border-radius:10px">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr />
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="Description"></label>
            <input asp-for="Description" type="text" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" type="text" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="Author"></label>
            <input asp-for="Author" type="text" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" type="number" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" type="number" class="form-control" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" type="number" class="form-control" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary" style="width:100%;font-weight:700;">ADD</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:100%;font-weight:700;">Back to list</a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}